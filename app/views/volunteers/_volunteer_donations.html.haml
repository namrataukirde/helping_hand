.row
  .col-md-8.col-md-offset-2
    %a{:href => new_donation_path, class: "btn btn-raised btn-primary",
      id: 'new-donation-button'} Add New Donation
    .bs-docs-section
      .row
        .col-md-12
          .page-header
            %h1#tables
          .bs-component
            %table.table.table-white{cellpadding: '10'}
              %thead
                %tr
                  %th{width: '20%'} Name
                  %th{width: '70%'} Description
                  %th{width: '10%'} Action
              %tbody
                - items.each do |item|
                  %tr
                    %td
                      %b
                        = link_to item.name, item_path(item)
                    %td
                      %div
                        %b Item Category:
                        = item.category
                      %hr
                      %div
                        .col-md-9.pad-left-0
                          %b Description:
                          %br
                          = item.description
                        .col-md-3
                          - if item.image.present?
                            = image_tag item.image.url(:thumb)
                        .clearfix
                      %hr

                    %td= link_to 'Edit', edit_donation_path(item),
                      class: 'btn btn-raised btn-primary'
    = paginate @items


