= f.fields_for :detail do |ff|
  .form-group
    = ff.label 'Name*', class: 'col-md-2 control-label'
    .col-md-10
      = ff.text_field :name, class: 'form-control'
  .form-group
    = ff.label 'Description*', class: 'col-md-2 control-label'
    .col-md-10
      = ff.text_area :name, class: 'form-control'
  .form-group
    = ff.label 'Category*', class: 'col-md-2 control-label'
    .col-md-10
      = ff.select :category, Ngo.category_collection, {}, class: 'form-control'
  - if ff.object.user.try(:persisted?)
    = ff.fields_for :address do |addr|
      = render 'addresses/form', f: addr
