.bs-docs-section
  .row
    .col-md-12
      .page-header
        %h1#tables
      .bs-component
        - if @items.empty?
          %h2 No items presennt
        - else
          %table.table.table-white
            %thead
              %tr
                %th{width: '20%'} Name
                %th{width: '70%'} Description
                %th{width: '10%'} Action
            %tbody
              - items.each do |item|
                %tr
                  %td
                    %b
                      = link_to item.name, donation_path(item)
                  %td
                    %div
                      %b Item Category:
                      = item.category
                    %hr
                    %div
                      .col-md-9.pad-left-0
                        %b Description:
                        %br
                        = item.description
                      .col-md-3
                        - if item.image.present?
                          = image_tag item.image.url(:thumb)
                      .clearfix
                    %hr
                    %div
                      %b User Details
                      %br
                      - donor = item.donor
                      = "Name: #{donor.name}"
                      %br
                      = "Address: #{donor.address.try(:display_address)}"
                      %br
                      = "Age: #{donor.age} |"
                      = "Gender: #{donor.display_gender}"

                  %td= link_to 'Accept', accept_donation_donation_path(item),
                    method: :put, class: 'btn btn-raised btn-primary'
  = paginate @items
