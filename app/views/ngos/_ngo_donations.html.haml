.col-md-10.col-md-offset-1
  .search-bar
    = search_form_for @q, url: list_donations_users_path, id: 'donation-search-form' do |f|
      .form-group
        = f.label :category_eq, class: 'col-md-2 control-label'
        .col-md-10
          = f.select :category_eq, Item.category_collection_with_index, { include_blank: 'All Category' }, class: 'form-control'
        .clearfix
      .form-group
        = f.label 'State', class: 'col-md-2 control-label'
        .col-md-4
          = f.text_field :address_state_cont, class: 'form-control'
        = f.label 'City', class: 'col-md-2 control-label'
        .col-md-4
          = f.text_field :address_city_cont, class: 'form-control'

  #donation-listing
    = render 'ngos/list_donations', items: @items
