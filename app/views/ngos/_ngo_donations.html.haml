.col-md-10.col-md-offset-1
  .bs-docs-section
    .row
      .col-md-12
        .page-header
          %h1#tables
        .bs-component
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th{width: '90%'} Description
                %th{width: '10%'} Action
            %tbody
              - @items.each do |item|
                %tr
                  %td
                    %div
                      %b Item Category:
                      = item.category
                    %hr
                    %div
                      %b Description:
                      %br
                      = item.description
                    %hr
                    %div
                      %b User Details
                      %br
                      - donor = item.donor
                      = "Address: #{donor.address.try(:display_address)}"
                      = "Name: #{donor.name}"
                      = "Age: #{donor.age}"
                      = "Gender: #{donor.display_gender}"

                  %td= link_to 'Edit', '#', class: 'btn btn-raised btn-primary'
  = paginate @items
